<%= form_tag("/products", method: "post") do %>
  <div>
  <%= label_tag(:name, "Type in the name of the product:") %>
  <%= text_field_tag(:name) %>
  </div>

  <div>
  <%= label_tag(:price, "Type in the price of the product:") %>
  <%= text_field_tag(:price) %>
  </div>

  <div>
  <%= label_tag(:description, "Type in the description of the product:") %>
  <%= text_field_tag(:description) %>
  </div>

  <div>
  <%= label_tag(:image, "Type in the image URL of the product:") %>
  <%= text_field_tag(:image) %>
  </div>
  <%= submit_tag("Create") %>
<% end %>
