<%= form_tag("/products", method: "post") do %>
  <%= label_tag(:name, "Type in the name of the product:") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:price, "Type in the price of the product:") %>
  <%= text_field_tag(:price) %>
  <%= label_tag(:description, "Type in the description of the product:") %>
  <%= text_field_tag(:description) %>
  <%= submit_tag("Create") %>
<% end %>
